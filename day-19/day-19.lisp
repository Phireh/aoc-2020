(defun read-rules (lines)
  (let ((rules '())
        (tests '()))
    (loop :for line :in lines
          :with reading-rules = t
          :if (string= "" line) :do
            (setf reading-rules nil)
          :else :do
            (if reading-rules (push line rules) (push line tests)))
    (values rules tests)))

